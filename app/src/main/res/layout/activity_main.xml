<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_change_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/btn_change_user" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        app:layout_constraintBottom_toBottomOf="@+id/btn_change_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/btn_change_user" />

    <Button
        android:id="@+id/btn_change_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeUserClicked"
        android:text="Change User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/cover"
        android:layout_width="@dimen/zero_value"
        android:layout_height="@dimen/zero_value"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        android:src="@drawable/strangers_cover_art"
        app:layout_constraintTop_toBottomOf="@id/btn_change_user"
        android:layout_marginTop="@dimen/marginTop_one"
        android:background="@null"
        android:foreground="?selectableItemBackground"/>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="song_name"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is me typing some random stuff still is goes out of the sdie sof the"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_name" />

    <TextView
        android:id="@+id/no_of_plays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nothing"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/marginTop_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artist_name" />

    <LinearLayout
        android:id="@+id/media_controls_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/no_of_plays"
        android:layout_marginTop="@dimen/marginTop_one"
        android:gravity="center">

        <ImageButton
            android:id="@+id/media_previous"
            android:layout_width="@dimen/zero_value"
            android:layout_weight="1"
            android:layout_height="@dimen/default_height"
            android:src="@drawable/ic_previous"
            android:background="@null"
            android:foreground="?selectableItemBackground" />

        <ImageButton
            android:id="@+id/media_play"
            android:layout_width="@dimen/zero_value"
            android:layout_weight="1"
            android:layout_height="@dimen/default_height"
            android:src="@drawable/ic_play"
            android:background="@null"
            android:foreground="?selectableItemBackground" />

        <ImageButton
            android:id="@+id/media_next"
            android:layout_width="@dimen/zero_value"
            android:layout_weight="1"
            android:layout_height="@dimen/default_height"
            android:src="@drawable/ic_next"
            android:background="@null"
            android:foreground="?selectableItemBackground" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/zero_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>